 <div class="container-md shadow-lg p-3">
    <%= render "shared/flash_message" %>
    <div class='row'>
      <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto text-dark">
        <h2 class="mb-3 ml-sm-n2 text-center">Edit Task</h2>
        <%= form_with model: @list, local: true do |f| %>
          <div class="col-md-12">
            <div class="form-group row">
              <h3 class="col-form-label">題名</h3>
              <%= f.text_field :title, placeholder: "題名を記述して下さい", class: 'form-control' %>
            </div>
            <div class="form-group row">
              <%= f.submit class: 'btn btn-secondary form-control btn-outline-light  hover-img' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
