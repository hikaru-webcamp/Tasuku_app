<div class="container-md shadow-lg p-3">
  <%= render "shared/flash_message" %>
  <div class='row'>
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto text-dark">
      <h2 class="mb-3 ml-sm-n2 text-center">New Card</h2>
      <%= form_with model: @card, url: { action: :create }, local: true do |f| %>
        <div class="col-md-12">
          <div class="form-group row">
            <h3 class="col-form-label">題名</h3>
            <%= f.text_field :title, placeholder: "カード名を記述して下さい", class: 'form-control' %>
          </div>
          <div class="form-group row">
            <h3 class="col-form-label">詳細</h3>
            <%= f.text_area :memo, placeholder: "詳細を記述して下さい", :size => "60x10",class: 'form-control' %>
          </div>
          <div class="form-group row">
            <%= f.submit class: 'btn btn-secondary form-control btn-outline-light  hover-img' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
